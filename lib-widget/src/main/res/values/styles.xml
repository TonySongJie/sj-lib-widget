<?xml version="1.0" encoding="utf-8"?>
<resources>
	
	<style name="ButtonDefaultStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@null</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textColor">#666666</item>
		<item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
	</style>
	
	<!-- 初始定义倒计时按钮样式 -->
	<style name="CountDownButtonStyle" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:textStyle">normal</item>
		<item name="android:background">@null</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
	</style>
</resources>